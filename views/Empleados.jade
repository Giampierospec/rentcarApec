extends shared/layout

block content
  div(class="row")
    div(class="col-sm-8 col-sm-offset-2")
      h2(class="text-center") Empleados
      a(href="/Empleados/Insertar", class="btn btn-primary") Insertar
      br
      br
      .form-inline
        .form-group.input-group
          label.input-group-addon
            b Nombre Empleado
          input(type="text", placeholder="buscar").form-control#searchEmpleado
      -if(data.length > 0){
      table(class="table table-responsive")
        thead
          tr
            th Nombre
            th Cedula
            th Tanda
            th Porciento Comision
            th fecha de Ingreso
            th Estado
        tbody#empleadoTable
          -for(var i = 0; i < data.length; i++){
          tr
            td= data[i].nombre
            td= data[i].cedula
            td= data[i].tandaLabor
            td= data[i].porcientoComision
            td= data[i].fechaIngreso.substring(0,10)
            td=data[i].estado
            td 
              a(href="/Empleados/Editar/"+data[i]._id).btn.btn-primary Editar
          -}
          -}
          -else{
            h2.text-center
              i
                b No hay nada para mostrar
          -}
