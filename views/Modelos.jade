extends shared/layout

block content
  div(class="row")
    div(class="col-sm-8 col-sm-offset-2")
      h2(class="text-center") Modelos
      a(href="/modeloVehiculo/Insertar", class="btn btn-primary") Insertar
      br
      br
      .form-inline
        .form-group.input-group
          label.input-group-addon
            b Modelo
          input(type="text",placeholder="buscar").form-control#searchModelo
      -if(data.length > 0){
      table(class="table table-responsive")
        thead
          tr
            th Modelo
            th Marca
            th Estado
        tbody#modeloTable
          -for(var i = 0; i < data.length; i++){
          tr
            td= data[i].descripcion
            td=data[i].marca
            td=data[i].estado
            td 
              a(href="/ModeloVehiculo/Editar/"+data[i]._id).btn.btn-primary Editar
          -}
      -}
      -else{
        h2.text-center 
          i 
            b No hay nada para mostrar
      -}

block scripts
  script(src="/js/modelos/filter.js")