extends shared/layout

block content
    div.row
        .col-sm-8.col-sm-offset-2
            h2.text-center Tipos de combustibles
            hr
            a(href="/tipoCombustible/Insertar").btn.btn-primary Insertar
            br
            br
            .form-inline
                .form-group.input-group
                    label.input-group-addon
                        b Tipo Combustible
                    input(type="text", placeholder="buscar").form-control#searchCombustible
            -if(tc.length > 0){
            table.table.table-responsive
                thead
                    tr
                        th Tipo Combustible
                        th Estado
                tbody#combustibleTable
                    -for(var i =0; i < tc.length; i++){
                        tr
                            td=tc[i].descripcion
                            td=tc[i].estado
                            td
                                a(href="/TipoCombustible/Editar/"+tc[i]._id).btn.btn-primary Editar
                    -}
                            
            -}
            -else{
                h2.text-center
                    i 
                        b No hay nada para mostrar
            -}
block scripts
    script(src="/js/tipoCombustible/filter.js")

